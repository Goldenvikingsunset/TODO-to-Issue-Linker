{
  "name": "todo-to-issue-linker",
  "displayName": "TODO to Issue Linker - GitHub Integration",
  "description": "ðŸ”— One-click conversion of TODO comments to GitHub issues. Find TODOs in any code file or Markdown and create issues instantly with pre-filled titles.",
  "version": "1.0.0",
  "publisher": "gingerturtle",
  "author": {
    "name": "Renni",
    "email": "renni@goldenvikingsunset.onmicrosoft.com",
    "url": "https://buymeacoffee.com/gingerturtle"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gingerturtle-dev/todo-to-issue-linker"
  },
  "bugs": {
    "url": "https://github.com/gingerturtle-dev/todo-to-issue-linker/issues"
  },
  "sponsor": {
    "url": "https://buymeacoffee.com/gingerturtle"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other",
    "SCM Providers",
    "Snippets"
  ],
  "keywords": [
    "todo",
    "github",
    "issues",
    "markdown",
    "productivity",
    "project management",
    "task management",
    "codelens",
    "git",
    "issue tracker",
    "workflow",
    "automation"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:csharp",
    "onLanguage:cpp",
    "onLanguage:c",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:php",
    "onLanguage:ruby",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:vue",
    "onLanguage:react"
  ],
  "main": "./out/extension.js",
  "icon": "images/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "todoIssueLinker.createIssue",
        "title": "ðŸ”— Create GitHub Issue from TODO",
        "category": "TODO Linker"
      },
      {
        "command": "todoIssueLinker.createIssueFromSelection",
        "title": "ðŸ”— Create Issue from Selected TODO",
        "category": "TODO Linker"
      },
      {
        "command": "todoIssueLinker.openRepository",
        "title": "ðŸ“‚ Open GitHub Repository",
        "category": "TODO Linker"
      },
      {
        "command": "todoIssueLinker.refreshCodeLens",
        "title": "ðŸ”„ Refresh TODO CodeLens",
        "category": "TODO Linker"
      },
      {
        "command": "todoIssueLinker.sponsor",
        "title": "â˜• Support This Extension",
        "category": "TODO Linker"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "todoIssueLinker.createIssueFromSelection",
          "group": "todo@1"
        }
      ],
      "commandPalette": [
        {
          "command": "todoIssueLinker.createIssueFromSelection",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "TODO to Issue Linker",
      "properties": {
        "todoIssueLinker.githubRepository": {
          "type": "string",
          "default": "",
          "description": "Override GitHub repository (format: owner/repo). Leave empty to auto-detect from git remote.",
          "examples": [
            "microsoft/vscode",
            "facebook/react"
          ]
        },
        "todoIssueLinker.todoPatterns": {
          "type": "array",
          "default": [
            "TODO:",
            "TODO\\(",
            "FIXME:",
            "BUG:",
            "HACK:",
            "NOTE:",
            "XXX:",
            "//\\s*TODO:",
            "//\\s*FIXME:",
            "//\\s*BUG:",
            "#\\s*TODO:",
            "#\\s*FIXME:",
            "<!--\\s*TODO:",
            "<!--\\s*FIXME:",
            "/\\*\\s*TODO:",
            "/\\*\\s*FIXME:",
            "'''\\s*TODO:",
            "\"\"\"\\s*TODO:"
          ],
          "description": "Regular expressions to match TODO patterns",
          "items": {
            "type": "string"
          }
        },
        "todoIssueLinker.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens links above TODO items"
        },
        "todoIssueLinker.issueLabels": {
          "type": "array",
          "default": [
            "todo",
            "enhancement"
          ],
          "description": "Default labels to add to created issues",
          "items": {
            "type": "string"
          }
        },
        "todoIssueLinker.includeFileInfo": {
          "type": "boolean",
          "default": true,
          "description": "Include file name and line number in issue body"
        }
      }
    },
    "keybindings": [
      {
        "command": "todoIssueLinker.createIssueFromSelection",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "echo Linting skipped - focusing on core functionality",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.100.0",
    "@vscode/test-electron": "^2.2.0",
    "typescript": "^4.9.5",
    "vsce": "^2.15.0"
  }
}
